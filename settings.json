{
    // vim (the most basic thing)
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader" : "space",
    "vim.normalModeKeyBindings": [
        // M-x
        { "before": ["<leader>", "space"], "commands": [ "workbench.action.showCommands" ]},

        // Window navigation 
        /////////////////////
        { "before": ["<leader>", "w", "h"], "commands": [ "workbench.action.focusPreviousGroup" ]},
        { "before": ["<leader>", "w", "j"], "commands": [ "workbench.action.focusBelowGroup" ]},
        { "before": ["<leader>", "w", "k"], "commands": [ "workbench.action.focusAboveGroup" ]},
        { "before": ["<leader>", "w", "l"], "commands": [ "workbench.action.focusNextGroup" ]},

        // 
        { "before": [ "<leader>", "w", "v" ], "commands": [ "workbench.action.splitEditorRight" ] },
        { "before": [ "<leader>", "w", "s" ], "commands": [ "workbench.action.splitEditorDown" ] },
        { "before": [ "<leader>", "w", "d" ], "commands": [ "workbench.action.closeEditorsInGroup" ] },

        // Editor management
        ////////////////////
        { "before": [ "<leader>", "b", "b" ], "commands": [ "workbench.action.showAllEditors"] },
        { "before": [ "<leader>", "b", "d" ], "commands": [ "workbench.action.closeWindow"] },
        { "before": [ "<leader>", "b", "n" ], "commands": [ "workbench.action.nextEditor"] },
        { "before": [ "<leader>", "b", "p" ], "commands": [ "workbench.action.previousEditor"] },
        { "before": [ "<leader>", "b", "N" ], "commands": [ "workbench.action.files.newUntitledFile"] },

        // File management 
        ////////////////// 
        { "before": [ "<leader>", "f", "s" ], "commands": [ "workbench.action.files.save"] }, // save file
        { "before": [ "<leader>", "f", "t" ], "commands": [ "workbench.view.explorer"] },  // open explorer

        // SCM
        { "before": [ "<leader>", "g", "s" ], "commands": [ "workbench.view.scm"] },  // open explorer

        // Toggle side bar
        { "before": [ "<leader>", "tab"], "commands": [ "workbench.action.toggleSidebarVisibility"] }  // open explorer
    ],

    // Text editing settings
    "editor.minimap.enabled": false,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.tabCompletion": "on",
    "editor.cursorStyle": "block",
    "editor.autoClosingOvertype": "always",
    "editor.cursorBlinking": "solid",
    "files.autoSave": "afterDelay",
    "editor.renderWhitespace": "all",
    "files.insertFinalNewline": true,
    "window.newWindowDimensions": "maximized",
    "workbench.colorTheme": "Field Lights",
    "workbench.iconTheme": "material-icon-theme"
}
