{
    /////////////////////////////
    // vim (the most basic thing)
    /////////////////////////////
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": "space",
    "vim.handleKeys": {
        "<C-b>": false,
        "<C-k>": false,
        "<C-j>": false,
        "<C-w>": false,
        "<C-o>": false
    },

    /////////////////////////////////
    // Key bindings for vim emulation
    /////////////////////////////////
    "vim.normalModeKeyBindings": [
        // Basics
        { "before": [ "<leader>", "<leader>" ], "commands": [ "workbench.action.showCommands" ] },

        // Side panels
        { "before": [ "<leader>", "s", "s" ],   "commands": [ "workbench.action.toggleSidebarVisibility" ] },
        { "before": [ "<leader>", "s", "e" ],   "commands": [ "workbench.view.explorer" ] },
        { "before": [ "<leader>", "s", "x" ],   "commands": [ "workbench.view.extension" ] },
        { "before": [ "<leader>", "s", "f" ],   "commands": [ "workbench.view.search" ] },

        // Editor navigation
        { "before": [ "<leader>", "w", "h" ],   "commands": [ "workbench.action.focusLeftGroup" ] },
        { "before": [ "<leader>", "w", "j" ],   "commands": [ "workbench.action.focusBelowGroup" ] },
        { "before": [ "<leader>", "w", "k" ],   "commands": [ "workbench.action.focusAboveGroup" ] },
        { "before": [ "<leader>", "w", "l" ],   "commands": [ "workbench.action.focusRightGroup" ] },

        // Split editors
        { "before": [ "<leader>", "w", "v" ],   "commands": [ "workbench.action.splitEditorRight" ] },
        { "before": [ "<leader>", "w", "s" ],   "commands": [ "workbench.action.splitEditorDown" ] },

        // Editor management
        { "before": [ "<leader>", "w", "d" ],   "commands": [ "workbench.action.closeActiveEditor" ] },

        // vim-nerdcommenter
        { "before": [ "<leader>", ";", ";" ],   "commands": [ "editor.action.commentLine" ] },

        // vim-unimpaired
        { "before": [ "[", "space" ],           "commands": [ "editor.action.insertLineBefore" ] },
        { "before": [ "]", "space" ],           "commands": [ "editor.action.insertLineAfter" ] },

        // File management
        { "before": [ "<leader>", "f", "n" ],   "commands": [ "workbench.action.files.newUntitledFile" ] },
        { "before": [ "<leader>", "f", "s" ],   "commands": [ "workbench.action.files.save" ] },

        // SCM
        { "before": [ "<leader>", "g", "s" ],   "commands": [ "workbench.view.scm" ] },

        // Project Manager
        { "before": [ "<leader>", "p", "p" ],   "commands": [ "projectManager.listProjects" ] },
    ],

    "vim.visualModeKeyBindings": [
        { "before": [ "<leader>", ";" ],        "commands": [ "editor.action.commentLine" ] },
    ],

    // Text editing settings
    "explorer.confirmDelete": false,
    "editor.minimap.enabled": false,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.tabCompletion": "on",
    "editor.cursorStyle": "block",
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "editor.autoClosingOvertype": "always",
    "editor.cursorBlinking": "solid",
    "editor.renderWhitespace": "all",
    "editor.formatOnSave": true,
    "editor.fontFamily": "Fira Code, monospace",
    "editor.fontWeight": "400",
    "editor.fontSize": 14,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,

    // Look and feel
    "window.newWindowDimensions": "maximized",
    "window.menuBarVisibility": "toggle",
    "window.zoomLevel": 0,
    "files.simpleDialog.enable": true,
    "material-icon-theme.saturation": null,
    "material-icon-theme.folders.theme": "classic",
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorTheme": "Dark (Molokai)",
    "vsicons.dontShowNewVersionMessage": true,

    // Zen mode
    "zenMode.fullScreen": true,
    "zenMode.hideStatusBar": false,
    "zenMode.centerLayout": false,
    "zenMode.hideLineNumbers": false,
    "zenMode.hideTabs": true,

    // SCM settings
    "git.autofetch": true,
    "git.showProgress": true,
    "git.suggestSmartCommit": false,
    "diffEditor.renderSideBySide": false,
    "diffEditor.ignoreTrimWhitespace": false,

    // Terraform
    "terraform.languageServer": {
        "external": true
    },

    // Integrated terminal
    "terminal.integrated.commandsToSkipShell": [
        "-workbench.action.quickOpen"
    ],

    // Don't format these files on save
    "[jsonc]": { "editor.formatOnSave": false }
}
