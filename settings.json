{
    /////////////////////////////
    // vim (the most basic thing)
    /////////////////////////////
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader" : "space",
    "vim.handleKeys": {
        "<C-b>": false,
        "<C-k>": false,
        "<C-j>": false,
        "<C-w>": false
    },

    // Key bindings for vim emulation
    "vim.normalModeKeyBindings": [
        // Window navigation 
        /////////////////////
        { "before": [ "<leader>", "w", "h" ], "commands": [ "workbench.action.focusLeftGroup" ]},
        { "before": [ "<leader>", "w", "j" ], "commands": [ "workbench.action.focusBelowGroup" ]},
        { "before": [ "<leader>", "w", "k" ], "commands": [ "workbench.action.focusAboveGroup" ]},
        { "before": [ "<leader>", "w", "l" ], "commands": [ "workbench.action.focusRightGroup" ]},

        // Split editors
        { "before": [ "<leader>", "w", "v" ], "commands": [ "workbench.action.splitEditorRight" ]},
        { "before": [ "<leader>", "w", "s" ], "commands": [ "workbench.action.splitEditorDown" ]},

        // Editor management
        ////////////////////
        { "before": [ "<leader>", "b", "d" ], "commands": [ "workbench.action.closeActiveEditor" ] },
        { "before": [ "<leader>", "b", "n" ], "commands": [ "workbench.action.files.newUntitledFile" ] },
        { "before": [ "<leader>", ";", ";" ], "commands": [ "editor.action.commentLine" ] },

        // vim-unimpaired
        { "before": [ "[", "space" ], "commands": [ "editor.action.insertLineBefore" ]},
        { "before": [ "]", "space" ], "commands": [ "editor.action.insertLineAfter" ]},

        // File management 
        //////////////////
        { "before": [ "<leader>", "f", "s" ], "commands": [ "workbench.action.files.save"] }, // save file

        // SCM
        { "before": [ "<leader>", "g", "s" ], "commands": [ "workbench.view.scm"] },  // open explorer
    ],

    // Terraform
    "terraform.languageServer": {
        "enabled": true,
        "args": []
    },
    "terraform.indexing": {
        "enabled": false,
        "liveIndexing": false,
        "delay": 500,
        "exclude": [
            ".terraform/**/*",
            "**/.terraform/**/*"
        ]
    },

    // Text editing settings
    "editor.minimap.enabled": false,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.tabCompletion": "on",
    "editor.cursorStyle": "block",
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "editor.autoClosingOvertype": "always",
    "editor.cursorBlinking": "solid",
    "editor.renderWhitespace": "all",
    "files.insertFinalNewline": true,

    // Look and feel
    "window.newWindowDimensions": "maximized",
    "window.menuBarVisibility": "hidden",
    "window.zoomLevel": 0,
    "workbench.colorTheme": "Field Lights",
    "workbench.iconTheme": "field-lights-monochrome",
    "editor.fontFamily": "Input Mono, Hack, Consolas, 'Courier New', monospace",
    "editor.fontSize": 12,

    // SCM settings
    "git.autofetch": true,
    "diffEditor.renderSideBySide": false,
}
