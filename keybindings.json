[
    // Common shortcuts I need to be normalized across platforms
    { "key": "ctrl+shift+p",          "command": "workbench.action.showCommands" },
    { "key": "ctrl+shift+o",          "command": "workbench.action.gotoSymbol" },
    { "key": "ctrl+p",                "command": "workbench.action.quickOpen" },

    // Editors
    { "key": "ctrl+w",                "command": "workbench.action.closeActiveEditor" },

    // SCM
    { "key": "ctrl+enter",             "command": "scm.acceptInput", "when": "scmRepository" },

    // Open files and folders
    { "key": "ctrl+o",                "command": "workbench.action.files.openFileFolder", "when": "isMac" },
    { "key": "ctrl+o",                "command": "workbench.action.files.openFile", "when": "!isMac" },
    { "key": "ctrl+k ctrl+o",         "command": "workbench.action.files.openFolder", "when": "!isMac" },

    // Side panels
    { "key": "ctrl+b",                "command": "workbench.action.toggleSidebarVisibility" },
    { "key": "ctrl+shift+e",          "command": "workbench.view.explorer" },
    { "key": "ctrl+shift+x",          "command": "workbench.view.extensions" },
    { "key": "ctrl+shift+g",          "command": "workbench.view.scm" },
    { "key": "ctrl+shift+f",          "command": "workbench.view.search"},
    { "key": "ctrl+j",                "command": "workbench.action.togglePanel" },

    // Switch to files within editors
    { "key": "alt+1",                "command": "workbench.action.openEditorAtIndex1"},
    { "key": "alt+2",                "command": "workbench.action.openEditorAtIndex2"},
    { "key": "alt+3",                "command": "workbench.action.openEditorAtIndex3"},
    { "key": "alt+4",                "command": "workbench.action.openEditorAtIndex4"},
    { "key": "alt+5",                "command": "workbench.action.openEditorAtIndex5"},
    { "key": "alt+6",                "command": "workbench.action.openEditorAtIndex6"},
    { "key": "alt+7",                "command": "workbench.action.openEditorAtIndex7"},
    { "key": "alt+8",                "command": "workbench.action.openEditorAtIndex8"},
    { "key": "alt+9",                "command": "workbench.action.openEditorAtIndex9"},

    // Toggle zen mode
    { "key": "ctrl+k z",             "command": "workbench.action.toggleZenMode" },

    // Quick open navigation
    { "key": "ctrl+k",               "command": "workbench.action.quickOpenSelectPrevious", "when": "inQuickOpen" },
    { "key": "ctrl+j",               "command": "workbench.action.quickOpenSelectNext", "when": "inQuickOpen" },
    { "key": "ctrl+[",               "command": "workbench.action.closeQuickOpen", "when": "inQuickOpen" },

    // Suggestion box navigation
    { "key": "ctrl+j",               "command": "selectNextSuggestion", "when": "editorTextFocus && suggestWidgetVisible" },
    { "key": "ctrl+k",               "command": "selectPrevSuggestion", "when": "editorTextFocus && suggestWidgetVisible" },

    //// List navigation
    { "key": "ctrl+h",               "command": "list.collapse", "when": "listFocus && !inputFocus" },
    { "key": "ctrl+l",               "command": "list.expand", "when": "listFocus && !inputFocus" },
    { "key": "ctrl+j",               "command": "list.focusDown", "when": "listFocus && !inputFocus" },
    { "key": "ctrl+k",               "command": "list.focusUp", "when": "listFocus && !inputFocus" }
]
