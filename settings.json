{
    /////////////////////////////
    // vim (the most basic thing)
    /////////////////////////////
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": "space",
    "vim.handleKeys": {
        "<C-b>": false,
        "<C-k>": false,
        "<C-j>": false,
        "<C-w>": false,
        "<C-o>": false
    },
    /////////////////////////////////
    // Key bindings for vim emulation
    /////////////////////////////////
    "vim.normalModeKeyBindings": [
        // Window navigation
        { "before": [ "<leader>", "w", "h" ], "commands": [ "workbench.action.focusLeftGroup" ] },
        { "before": [ "<leader>", "w", "j" ], "commands": [ "workbench.action.focusBelowGroup" ] },
        { "before": [ "<leader>", "w", "k" ], "commands": [ "workbench.action.focusAboveGroup" ] },
        { "before": [ "<leader>", "w", "l" ], "commands": [ "workbench.action.focusRightGroup" ] },

        // Split editors
        { "before": [ "<leader>", "w", "v" ], "commands": [ "workbench.action.splitEditorRight" ] },
        { "before": [ "<leader>", "w", "s" ], "commands": [ "workbench.action.splitEditorDown" ] },

        // Editor management
        { "before": [ "<leader>", "b", "d" ], "commands": [ "workbench.action.closeActiveEditor" ] },
        { "before": [ "<leader>", "b", "n" ], "commands": [ "workbench.action.files.newUntitledFile" ] },
        { "before": [ "<leader>", ";", ";" ], "commands": [ "editor.action.commentLine" ] },

        // vim-unimpaired
        { "before": [ "[", "space" ], "commands": [ "editor.action.insertLineBefore" ] },
        { "before": [ "]", "space" ], "commands": [ "editor.action.insertLineAfter" ] },

        // File management
        { "before": [ "<leader>", "f", "s" ], "commands": [ "workbench.action.files.save" ] }, // save file

        // SCM
        { "before": [ "<leader>", "g", "s" ], "commands": [ "workbench.view.scm" ] }, // open explorer
    ],

    "vim.visualModeKeyBindings": [
        { "before": [ "<leader>", ";" ], "commands": [ "editor.action.commentLine" ] },
    ],

    // Text editing settings
    "editor.minimap.enabled": false,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.tabCompletion": "on",
    "editor.cursorStyle": "block",
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "editor.autoClosingOvertype": "always",
    "editor.cursorBlinking": "solid",
    "editor.renderWhitespace": "all",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,

    // Look and feel
    "window.newWindowDimensions": "maximized",
    "window.menuBarVisibility": "toggle",
    "window.zoomLevel": -0.5,
    "workbench.colorTheme": "City Lights",
    "editor.fontFamily": "Fira Mono, monospace",
    "editor.fontWeight": "500",
    "editor.fontSize": 14,
    "files.simpleDialog.enable": true,

    // Zen mode
    "zenMode.fullScreen": true,
    "zenMode.hideStatusBar": false,
    "zenMode.centerLayout": false,
    "zenMode.hideLineNumbers": false,
    "zenMode.hideTabs": false,

    // SCM settings
    "git.autofetch": true,
    "git.showProgress": true,
    "diffEditor.renderSideBySide": false,

    "material-icon-theme.saturation": null,
    "material-icon-theme.folders.theme": "classic",
    "workbench.iconTheme": "city-lights-icons-vsc-light",
}
