[
    ///////////////////////////////////
    // Common shortcuts I need to be normalized across platforms
    ///////////////////////////////////
    {
        "key": "ctrl+shift+o",
        "command": "workbench.action.gotoSymbol"
    },
    {
        "key": "ctrl+p",
        "command": "workbench.action.quickOpen"
    },
    //////////////////////////////////
    // Switch windows
    ///////////////////////////////////
    {
        "key": "ctrl+; w",
        "command": "workbench.action.quickSwitchWindow"
    },
    ///////////////////////////////////
    // SCM
    ///////////////////////////////////
    {
        "key": "ctrl+enter",
        "command": "scm.acceptInput",
        "when": "scmRepository"
    },
    {
        "key": "ctrl+; g",
        "command": "workbench.view.scm"
    },
    ///////////////////////////////////
    // Open files and folders
    ///////////////////////////////////
    {
        "key": "ctrl+o",
        "command": "workbench.action.files.openFileFolder",
        "when": "isMac"
    },
    ///////////////////////////////////
    // Panel
    ///////////////////////////////////
    {
        "key": "ctrl+j",
        "command": "workbench.action.togglePanel"
    },
    ///////////////////////////////////
    // Switch to files within editors
    ///////////////////////////////////
    {
        "key": "ctrl+; 1",
        "command": "workbench.action.openEditorAtIndex1"
    },
    {
        "key": "ctrl+; 2",
        "command": "workbench.action.openEditorAtIndex2"
    },
    {
        "key": "ctrl+; 3",
        "command": "workbench.action.openEditorAtIndex3"
    },
    ///////////////////////////////////
    // Input blur (removes any focus from any input field yayyy)
    ///////////////////////////////////
    {
        "key": "ctrl+[",
        "command": "workbench.action.blur"
    },
    ///////////////////////////////////
    // Toggle zen mode
    ///////////////////////////////////
    {
        "key": "ctrl+; z",
        "command": "workbench.action.toggleZenMode"
    },
    ///////////////////////////////////
    // Quick open navigation
    ///////////////////////////////////
    {
        "key": "ctrl+k",
        "command": "workbench.action.quickOpenSelectPrevious",
        "when": "inQuickOpen"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.quickOpenSelectNext",
        "when": "inQuickOpen"
    },
    ///////////////////////////////////
    // Suggestion box navigation
    ///////////////////////////////////
    {
        "key": "ctrl+j",
        "command": "selectNextSuggestion",
        "when": "editorTextFocus && suggestWidgetVisible"
    },
    {
        "key": "ctrl+k",
        "command": "selectPrevSuggestion",
        "when": "editorTextFocus && suggestWidgetVisible"
    },
    ///////////////////////////////////
    // List navigation
    ///////////////////////////////////
    {
        "key": "ctrl+h",
        "command": "list.collapse",
        "when": "listFocus && !inputFocus"
    },
    {
        "key": "ctrl+l",
        "command": "list.expand",
        "when": "listFocus && !inputFocus"
    },
    {
        "key": "ctrl+j",
        "command": "list.focusDown",
        "when": "listFocus && !inputFocus"
    },
    {
        "key": "ctrl+k",
        "command": "list.focusUp",
        "when": "listFocus && !inputFocus"
    },
    ///////////////////////////////////
    // Editors
    ///////////////////////////////////
    {
        "key": "ctrl+w",
        "command": "workbench.action.closeActiveEditor"
    },
    // resizing
    {
        "key": "shift+cmd+h",
        "command": "workbench.action.decreaseViewWidth",
        "when": "editorFocus"
    },
    {
        "key": "shift+cmd+j",
        "command": "workbench.action.decreaseViewHeight",
        "when": "editorFocus"
    },
    {
        "key": "shift+cmd+k",
        "command": "workbench.action.increaseViewHeight",
        "when": "editorFocus"
    },
    {
        "key": "shift+cmd+l",
        "command": "workbench.action.increaseViewWidth",
        "when": "editorFocus"
    },
    ///////////////////////////////////
    // Terminal
    ///////////////////////////////////
    {
        "key": "ctrl+; t",
        "command": "workbench.action.terminal.toggleTerminal"
    },
    ///////////////////////////////////
    // Side panels
    ///////////////////////////////////
    {
        "key": "ctrl+b",
        "command": "workbench.action.toggleSidebarVisibility"
    },
    {
        "key": "ctrl+; space",
        "command": "workbench.action.showCommands"
    },
    {
        "key": "f1",
        "command": "-workbench.action.showCommands"
    },
    {
        "key": "ctrl+; e",
        "command": "workbench.view.explorer",
        "when": "viewContainer.workbench.view.explorer.enabled"
    },
    {
        "key": "ctrl+; f",
        "command": "workbench.view.search"
    },
    // Project Manager
    {
        "key": "ctrl+; p",
        "command": "projectManager.listProjectsNewWindow"
    },
    {
        "key": "ctrl+; x",
        "command": "workbench.view.extensions",
        "when": "viewContainer.workbench.view.extensions.enabled"
    },
    ///////////////////////////////////////////////
    // These will force me to use my key bindings
    ///////////////////////////////////////////////
    {
        "key": "shift+cmd+p",
        "command": "-workbench.action.showCommands"
    },
    {
        "key": "shift+cmd+e",
        "command": "-workbench.view.explorer",
        "when": "viewContainer.workbench.view.explorer.enabled"
    },
    {
        "key": "shift+cmd+x",
        "command": "-workbench.view.extensions",
        "when": "viewContainer.workbench.view.extensions.enabled"
    },
    {
        "key": "shift+cmd+f",
        "command": "-workbench.view.search",
        "when": "workbench.view.search.active"
    },
    {
        "key": "shift+cmd+f",
        "command": "-workbench.action.findInFiles"
    },
    {
        "key": "alt+cmd+p",
        "command": "-projectManager.listProjects"
    },
]
